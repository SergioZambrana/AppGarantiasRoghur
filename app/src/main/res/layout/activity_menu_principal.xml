<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.LoginGarantia.MenuPrincipalC">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/azul_y_negro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/garant_as_con_tilde" />

        <Button
            android:id="@+id/buttonactivargarantia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_conefecto"
            android:text="Activar Garantia"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/buttonreclamargarantia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_conefecto"
            android:elevation="5dp"
            android:text="Reclamar Garantia"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/buttonsalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_conefecto"
            android:text="Cerrar Sesion"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Usted esta Logeado como ..."
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="16sp">

        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
